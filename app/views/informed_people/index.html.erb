<p id="notice"><%= notice %></p>

<h1>Informed People</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @informed_people.each do |informed_person| %>
      <tr>
        <td><%= informed_person.person_id %></td>
        <td><%= informed_person.student_id %></td>
        <td><%= link_to 'Show', informed_person %></td>
        <td><%= link_to 'Edit', edit_informed_person_path(informed_person) %></td>
        <td><%= link_to 'Destroy', informed_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

